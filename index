        function populateCriteria() {
            const container = document.getElementById('criteriaContainer');
            if (!container) return;
            container.innerHTML = criteriaData.map(item => `
                <div class="accordion-item">
                    <button class="accordion-button">${item.title}</button>
                    <div class="accordion-content">
                        <p>${item.details}</p>
                    </div>
                </div>
            `).join('');
        }

        function populateAdvantages() {
            const container = document.getElementById('advantagesContainer');
            if (!container) return;
            container.innerHTML = advantagesData.map(item => `
                <div class="accordion-item">
                    <button class="accordion-button">${item.title}</button>
                    <div class="accordion-content">
                        <p>${item.details}</p>
                    </div>
                </div>
            `).join('');
        }
        
        function populateEipPrinciples() {
            const container = document.getElementById('eipPrinciplesContainer');
            if (!container) return;
            container.innerHTML = eipPrinciplesData.map(item => `
                <div class="accordion-item">
                    <button class="accordion-button">${item.title}</button>
                    <div class="accordion-content">
                        <p>${item.details}</p>
                    </div>
                </div>
            `).join('');
        }

        function populateGlobalEipModels() {
            const container = document.getElementById('globalEipModelsContainer');
            if (!container) return;
            container.innerHTML = globalEipModelsData.map(item => `
                <div class="accordion-item">
                    <button class="accordion-button">${item.title}</button>
                    <div class="accordion-content">
                        <p>${item.details}</p>
                    </div>
                </div>
            `).join('');
        }
        
        function populateRecommendations() {
            const container = document.getElementById('recommendationsContainer');
            if (!container) return;
            container.innerHTML = recommendationsData.map(rec => `
                <div class="accordion-item">
                    <button class="accordion-button">${rec.category}</button>
                    <div class="accordion-content">
                        <ul class="list-disc list-inside space-y-1">
                            ${rec.points.map(point => `<li>${point}</li>`).join('')}
                        </ul>
                    </div>
                </div>
            `).join('');
        }

        function openModal(opportunityId) {
            const opportunity = opportunitiesData.find(op => op.id === opportunityId);
            if (opportunity) {
                modalTitle.textContent = opportunity.name;
                modalEcoDimensions.innerHTML = `<h4 class="font-semibold text-emerald-600">üåç Eco-Friendly Dimensions:</h4><p class="text-sm text-stone-700">${opportunity.ecoDimensions}</p>`;
                modalMarketPotential.innerHTML = `<h4 class="font-semibold text-emerald-600">üìà Market Potential:</h4><p class="text-sm text-stone-700">${opportunity.marketPotential}</p>`;
                modalSyrianAdvantage.innerHTML = `<h4 class="font-semibold text-emerald-600">üá∏üáæ Syrian Advantage:</h4><p class="text-sm text-stone-700">${opportunity.syrianAdvantage}</p>`;
                modalSandboxPotential.innerHTML = `<h4 class="font-semibold text-emerald-600">üí° Sandbox Potential:</h4><p class="text-sm text-stone-700">${opportunity.sandboxPotential}</p>`;
                modalChallenges.innerHTML = `<h4 class="font-semibold text-red-600">‚ö†Ô∏è Key Challenges:</h4><p class="text-sm text-stone-700">${opportunity.challenges}</p>`;
                modalReportSource.textContent = opportunity.reportSource;
                modal.style.display = "block";
            }
        }

        function closeModal() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }
        
        function renderOpportunities(filter = 'all') {
            if (!opportunitiesContainer) return;
            opportunitiesContainer.innerHTML = '';
            const filteredOpportunities = filter === 'all' ? opportunitiesData : opportunitiesData.filter(op => op.sector === filter);
            
            filteredOpportunities.forEach(op => {
                const card = `
                    <div class="bg-white p-5 rounded-lg shadow-lg card-hover transition-all duration-300 flex flex-col justify-between">
                        <div>
                            <div class="text-4xl mb-2">${op.icon}</div>
                            <h3 class="text-lg font-semibold text-emerald-700 mb-2">${op.name}</h3>
                            <p class="text-sm text-stone-600 mb-3">${op.description}</p>
                        </div>
                        <button onclick="openModal('${op.id}')" class="mt-auto bg-emerald-500 hover:bg-emerald-600 text-white text-sm px-4 py-2 rounded-md transition-colors duration-150 w-full">Learn More</button>
                    </div>
                `;
                opportunitiesContainer.innerHTML += card;
            });
        }

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                const targetTab = button.dataset.tab;

                tabButtons.forEach(btn => {
                    btn.classList.remove('tab-active');
                    btn.classList.add('tab-inactive');
                });
                button.classList.add('tab-active');
                button.classList.remove('tab-inactive');

                tabContents.forEach(content => {
                    if (content.id === targetTab) {
                        content.classList.remove('hidden');
                    } else {
                        content.classList.add('hidden');
                    }
                });
            });
        });
        
        if (industryFilterButtons.length > 0) {
            industryFilterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const filter = button.dataset.filter;
                    renderOpportunities(filter);
                    industryFilterButtons.forEach(btn => {
                        btn.classList.remove('bg-emerald-500', 'text-white');
                        btn.classList.add('bg-gray-200', 'text-gray-700');
                    });
                    button.classList.add('bg-emerald-500', 'text-white');
                    button.classList.remove('bg-gray-200', 'text-gray-700');
                });
            });
        }
        
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('accordion-button')) {
                const content = e.target.nextElementSibling;
                if (content) {
                    content.style.display = content.style.display === 'block' ? 'none' : 'block';
                }
            }
        });

        function wrapText(text, maxWidth) {
            const words = text.split(' ');
            let lines = [];
            let currentLine = words[0];

            if (!currentLine) return [""]; 

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + words[i].length + 1 < maxWidth) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }
        
        const economicChartElement = document.getElementById('economicChart');
        if (economicChartElement) {
            const economicCtx = economicChartElement.getContext('2d');
            new Chart(economicCtx, {
                type: 'bar',
                data: {
                    labels: ['GDP Growth (2024)', 'Inflation (2024 est.)', 'Public Debt (% GDP)', 'Poverty Rate (2022)'],
                    datasets: [{
                        label: 'Economic Indicators',
                        data: [-1.5, 40, 200, 69],
                        backgroundColor: ['#EF4444', '#F97316', '#F59E0B', '#84CC16'],
                        borderColor: ['#DC2626', '#EA580C', '#D97706', '#65A30D'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: false } },
                    plugins: { 
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) { label += ': '; }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y + (context.label.includes('GDP') || context.label.includes('Inflation') || context.label.includes('Poverty') ? '%' : '');
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }

        const mswChartElement = document.getElementById('mswChart');
        if (mswChartElement) {
            const mswCtx = mswChartElement.getContext('2d');
            new Chart(mswCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Organic (69.1%)', 'Plastics (10.6%)', 'Inert (8.7%)', 'Paper (4.6%)', 'Textiles (2.5%)', 'Metal (1.2%)', 'Glass (1.1%)', 'Wood (0.6%)', 'Hazardous (1.6%)'].map(label => wrapText(label, 16)),
                    datasets: [{
                        label: 'MSW Composition (Homs, 2020)',
                        data: [69.1, 10.6, 8.7, 4.6, 2.5, 1.2, 1.1, 0.6, 1.6],
                        backgroundColor: ['#22C55E', '#3B82F6', '#A855F7', '#F97316', '#EC4899', '#6B7280', '#14B8A6', '#D97706', '#EF4444'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { position: 'bottom', labels: { boxWidth:15, font: {size: 10}} },
                         tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label.join ? context.label.join(' ') : context.label; 
                                    if (label) { label += ': '; }
                                    if (context.parsed !== null) {
                                        label += context.parsed + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }
        
        populateCriteria();
        populateAdvantages();
        populateEipPrinciples();
        populateGlobalEipModels();
        populateRecommendations();
        renderOpportunities(); 

    </script>
</body>
</html>
